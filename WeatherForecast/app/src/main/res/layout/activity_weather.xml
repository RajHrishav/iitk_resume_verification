<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".WeatherActivity"
        android:background="@drawable/wp2"
        android:orientation="vertical">

        <TextView
        android:id="@+id/txtLocn"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
            android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="550dp"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:src="@drawable/d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonChngLoc"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:onClick="goToPrevActivity"
                android:text="change Loc"
                android:textSize="8sp" />

            <Button
                android:id="@+id/btnForecast"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="25dp"
                android:onClick="goToSecondLastActivity"
                android:text="5 day forecast      "
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp">

        <TextView
            android:id="@+id/txtTemp"
            android:layout_width="92dp"
            android:layout_height="97dp"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtCond"
            android:layout_width="270dp"
            android:layout_height="97dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/txtHumidity"
        android:layout_width="252dp"
        android:layout_height="67dp"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMIn"
            android:layout_width="162dp"
            android:layout_height="67dp"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtMax"
            android:layout_width="162dp"
            android:layout_height="67dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />


    </LinearLayout>


    <TextView
        android:id="@+id/txtdate"
        android:layout_width="252dp"
        android:layout_height="67dp"
        android:text="Date"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/btnOwm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:onClick="GO_to_Owm"
        app:srcCompat="@drawable/owm" />


    </LinearLayout>


